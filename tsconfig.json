{
  "compilerOptions": {
    "module": "commonjs",
    "esModuleInterop": true,
    "declaration": true,
    "removeComments": true,
    "target": "es2015",
    "lib": ["es2019"],
    "sourceMap": true,
    "outDir": "./dist/src",
    "noUnusedLocals": true,
    "noImplicitAny": false,
    "strictNullChecks": true,
    "baseUrl": "./"
  },
  "include": ["src"]
}
